<%= search_form_for @q, :class => collapse_search_form, :id => "loans_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :current_balance, "Current balance" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :current_balance_gteq, :class => "form-control", :placeholder => "Current balance greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :current_balance_lteq, :class => "form-control", :placeholder => "Current balance less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :periods_in_year, "Periods in year" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :periods_in_year_gteq, :class => "form-control", :placeholder => "Periods in year greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :periods_in_year_lteq, :class => "form-control", :placeholder => "Periods in year less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :interest_rate, "Interest rate" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :interest_rate_gteq, :class => "form-control", :placeholder => "Interest rate greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :interest_rate_lteq, :class => "form-control", :placeholder => "Interest rate less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :original_amount, "Original amount" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <%= f.text_field :original_amount_gteq, :class => "form-control", :placeholder => "Original amount greater than or equal to" %>
      </div>
      <div class='col-md-6'>
        <%= f.text_field :original_amount_lteq, :class => "form-control", :placeholder => "Original amount less than or equal to" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :pmt_adjustments_payment_occurence_cont, "PmtAdjustment payment_occurence contains" %>
    <%= f.text_field :pmt_adjustments_payment_occurence_cont, :class => "form-control", :placeholder => "PmtAdjustment payment_occurence contains" %>
  </div>

  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/loans" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

<a class="btn btn-outline-secondary btn-block mb-1" data-toggle="collapse" href="#loans_filters">
  Show filters
</a>
