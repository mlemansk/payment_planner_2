<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All loans
    </h1>

    <a href="/loans/new" class="btn btn-block btn-outline-secondary">
      Add a new loan
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "loan_templates/loans_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Current balance
        </th>

        <th>
          Original amount
        </th>

        <th>
          Interest rate
        </th>

        <th>
          Periods in year
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @loans.each do |loan| %>
      <tr>
        <td>
          <%= loan.id %>
        </td>

        <td>
          <%= loan.current_balance %>
        </td>

        <td>
          <%= loan.original_amount %>
        </td>

        <td>
          <%= loan.interest_rate %>
        </td>

        <td>
          <%= loan.periods_in_year %>
        </td>

        <td>
          <% if loan.user.present? %>
            <a href="/users/<%= loan.user.id %>">
              <%= loan.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= time_ago_in_words(loan.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(loan.updated_at) %> ago
        </td>

        <td>
          <a href="/loans/<%= loan.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @loans, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
