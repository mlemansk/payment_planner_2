<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Pmt adjustment #<%= @pmt_adjustment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/pmt_adjustments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <% if current_user == @pmt_adjustment.user %>
          <a href="/pmt_adjustments/<%= @pmt_adjustment.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit pmt_adjustment
          </a>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @pmt_adjustment.user %>
          <a href="/delete_pmt_adjustment/<%= @pmt_adjustment.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete pmt_adjustment
          </a>
        <% end %>
      </div>
    </div>

    <dl>
      <dt>
        Payment occurence
      </dt>
      <dd>
        <%= @pmt_adjustment.payment_occurence %>
      </dd>

      <dt>
        Loan
      </dt>
      <dd>
        <% if @pmt_adjustment.loan.present? %>
          <a href="/loans/<%= @pmt_adjustment.loan_id %>">
            <%= @pmt_adjustment.loan.current_balance %>
          </a>
        <% end %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <% if @pmt_adjustment.user.present? %>
          <a href="/users/<%= @pmt_adjustment.user_id %>">
            <%= @pmt_adjustment.user.email %>
          </a>
        <% end %>
      </dd>

      <dt>
        Pmt adjustment
      </dt>
      <dd>
        <%= @pmt_adjustment.pmt_adjustment %>
      </dd>

      <dt>
        Beg pay adj
      </dt>
      <dd>
        <%= @pmt_adjustment.beg_pay_adj %>
      </dd>

      <dt>
        End pay adj
      </dt>
      <dd>
        <%= @pmt_adjustment.end_pay_adj %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@pmt_adjustment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@pmt_adjustment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

