<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All pmt adjustments
    </h1>

    <a href="/pmt_adjustments/new" class="btn btn-block btn-outline-secondary">
      Add a new pmt adjustment
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12 mb-3">
    <%= render partial: "pmt_adjustment_templates/pmt_adjustments_search_form" %>
  </div>
</div>



<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Payment occurence
        </th>

        <th>
          Loan
        </th>

        <th>
          User
        </th>

        <th>
          Pmt adjustment
        </th>

        <th>
          Beg pay adj
        </th>

        <th>
          End pay adj
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pmt_adjustments.each do |pmt_adjustment| %>
      <tr>
        <td>
          <%= pmt_adjustment.id %>
        </td>

        <td>
          <%= pmt_adjustment.payment_occurence %>
        </td>

        <td>
          <% if pmt_adjustment.loan.present? %>
            <a href="/loans/<%= pmt_adjustment.loan.id %>">
              <%= pmt_adjustment.loan.current_balance %>
            </a>
          <% end %>
        </td>

        <td>
          <% if pmt_adjustment.user.present? %>
            <a href="/users/<%= pmt_adjustment.user.id %>">
              <%= pmt_adjustment.user.email %>
            </a>
          <% end %>
        </td>

        <td>
          <%= pmt_adjustment.pmt_adjustment %>
        </td>

        <td>
          <%= pmt_adjustment.beg_pay_adj %>
        </td>

        <td>
          <%= pmt_adjustment.end_pay_adj %>
        </td>

        <td>
          <%= time_ago_in_words(pmt_adjustment.created_at) %> ago
        </td>

        <td>
          <%= time_ago_in_words(pmt_adjustment.updated_at) %> ago
        </td>

        <td>
          <a href="/pmt_adjustments/<%= pmt_adjustment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>

    <div class="row mb-3">
      <div class="col-md-12">
        <%= paginate @pmt_adjustments, theme: "twitter-bootstrap-4" %>
      </div>
    </div>

  </div>
</div>
