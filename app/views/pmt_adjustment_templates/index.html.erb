<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Payment occurence
        </th>

        <th>
          Loan
        </th>

        <th>
          User
        </th>

        <th>
          Pmt adjustment
        </th>

        <th>
          Beg pay adj
        </th>

        <th>
          End pay adj
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @pmt_adjustments.each do |pmt_adjustment| %>
      <tr>
        <!-- Display pmt_adjustment.id start -->
        <td>
          <%= pmt_adjustment.id %>
        </td>
        <!-- Display pmt_adjustment.id end -->

        <!-- Display pmt_adjustment.payment_occurence start -->
        <td>
          <%= pmt_adjustment.payment_occurence %>
        </td>
        <!-- Display pmt_adjustment.payment_occurence end -->

        <!-- Display pmt_adjustment.loan_id start -->
        <td>
          <%= pmt_adjustment.loan.current_balance %>
        </td>
        <!-- Display pmt_adjustment.loan_id end -->

        <!-- Display pmt_adjustment.user_id start -->
        <td>
          <%= pmt_adjustment.user_id %>
        </td>
        <!-- Display pmt_adjustment.user_id end -->

        <!-- Display pmt_adjustment.pmt_adjustment start -->
        <td>
          <%= pmt_adjustment.pmt_adjustment %>
        </td>
        <!-- Display pmt_adjustment.pmt_adjustment end -->

        <!-- Display pmt_adjustment.beg_pay_adj start -->
        <td>
          <%= pmt_adjustment.beg_pay_adj %>
        </td>
        <!-- Display pmt_adjustment.beg_pay_adj end -->

        <!-- Display pmt_adjustment.end_pay_adj start -->
        <td>
          <%= pmt_adjustment.end_pay_adj %>
        </td>
        <!-- Display pmt_adjustment.end_pay_adj end -->

        <!-- Display pmt_adjustment.created_at start -->
        <td>
          <%= time_ago_in_words(pmt_adjustment.created_at) %> ago
        </td>
        <!-- Display pmt_adjustment.created_at end -->

        <!-- Display pmt_adjustment.updated_at start -->
        <td>
          <%= time_ago_in_words(pmt_adjustment.updated_at) %> ago
        </td>
        <!-- Display pmt_adjustment.updated_at end -->

        <td>
          <a href="/pmt_adjustments/<%= pmt_adjustment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
