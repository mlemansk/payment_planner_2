<% if @pmt_adjustment.errors.any? %>
  <% @pmt_adjustment.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit pmt adjustment #<%= @pmt_adjustment.id %>
</h1>

<hr>

<form action="/update_pmt_adjustment/<%= @pmt_adjustment.id %>" method="post">

  <div class="form-group">
    <label for="payment_occurence">
      Payment occurence
    </label>

    <input type="text" id="payment_occurence" name="payment_occurence" class="form-control" value="<%= @pmt_adjustment.payment_occurence %>">
  </div>

  <div class="form-group">
    <label for="loan_id">
      Loan
    </label>

    <%= select_tag(:loan_id, options_from_collection_for_select(Loan.all, :id, :current_balance, @pmt_adjustment.loan_id), :class => "form-control") %>
  </div>


  <div class="form-group">
    <label for="pmt_adjustment">
      Pmt adjustment
    </label>

    <input type="text" id="pmt_adjustment" name="pmt_adjustment" class="form-control" value="<%= @pmt_adjustment.pmt_adjustment %>">
  </div>

  <div class="form-group">
    <label for="beg_pay_adj">
      Beg pay adj
    </label>

    <input type="text" id="beg_pay_adj" name="beg_pay_adj" class="form-control" value="<%= @pmt_adjustment.beg_pay_adj %>">
  </div>

  <div class="form-group">
    <label for="end_pay_adj">
      End pay adj
    </label>

    <input type="text" id="end_pay_adj" name="end_pay_adj" class="form-control" value="<%= @pmt_adjustment.end_pay_adj %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update pmt adjustment
  </button>
</form>

<hr>

<a href="/pmt_adjustments">
  Go back
</a>
